{
  "manifest_version": 3,
  "name": "VOIX",
  "version": "1.0",
  "description": "AI-powered web automation assistant with intelligent tool discovery",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["marked.min.js", "purify.min.js", "mcp-server.js", "content.js"],
      "css": ["chat.css"]
    }
  ],
  "action": {
    "default_title": "Toggle VOIX Chat"
  },
  "options_page": "options.html",
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}